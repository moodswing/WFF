@model WFF.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row  padding-top-cuerpo">
    <div class="container center-block">
        <br>
        <div class="page-header">
            @*<p class="texto-area-gris1" align="center">@Resources.Language.lblAccessSystem</p>*@
            <p class="texto-area-gris1" align="center">Enter System WFF</p>
        </div>
        <br>
        <div class="panel-default-ingreso panel" id="pl">
            @*<div class="panel-heading"><strong> @Resources.Language.lblAccess </strong></div>*@
            <div class="panel-heading"><strong> Access </strong></div>
            <div class="panel-body">
                @using (Html.BeginForm("Validate", "Login", new { ReturnUrl = "/Dashboard" }, FormMethod.Post, false, new { htmlAttributes = new { @class = "form-horizontal", role = "form" } }))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.User, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.User, new { @class = "form-control", required = "required", @placeholder = ExpressionMetadataProvider.FromLambdaExpression(m => m.User, ViewData, Html.MetadataProvider).Metadata.Placeholder })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required", @placeholder = ExpressionMetadataProvider.FromLambdaExpression(m => m.Password, ViewData, Html.MetadataProvider).Metadata.Placeholder })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-12">
                            @*<button type="submit" class="btn btn-primary" id="btnChkUser" name="btnChkUser">@Resources.Language.lblAccessBtn</button>*@
                            <button type="submit" class="btn btn-primary" id="btnChkUser" name="btnChkUser">Enter</button>
                        </div>
                    </div>

                    @Html.HiddenFor(l => l.idRequest)
                }
            </div>
        </div>
        @if (Model != null && !string.IsNullOrEmpty(Model.Message))
        {
            <div class="session-timeout">
                @Model.Message
            </div>
        }
    </div>
</div>
